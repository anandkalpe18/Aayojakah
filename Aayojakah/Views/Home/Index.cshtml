@{
    ViewData["Title"] = "Home Page";
}

<head>
    <style>
      
        .logo {
            float: left;
            padding-left: 2px;
        }
        .navbar-brand{
            margin:0;
            padding:0;

        }

        .logo {
            height: 40px;
            padding-right: 15px;
            padding-left: 5px;
           
        }

        .navbar-collapse {
            float: right;
            
        }
        .home:hover {
            
            background-color: black;
            border-radius:3px;
        }
        .b1:hover{
            color:black;
        }

        .top-section {
            margin:0;
            background-color: black;
            box-shadow: 2px 2px 2px 0px ;
            position:relative;
        }

        .top-section img {
            opacity: 1;
            display: block;
            height: 100%;
            width: 100%;
            border: none;
            margin: 0;
            padding-left: 0;
            object-fit: cover;
            transition: .5s ease;
            backface-visibility: hidden;

            
           
        }
        .middle {
            transition: .5s ease;
            opacity: 0;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
            text-align: center;
        }
        .top-section:hover img {
            opacity: 0.2;
        }
            
        .top-section:hover .middle {
            opacity: 1;
        }
            
        
        .top-text{
            color:white;
            font-size:35px;
            font-family:'Freestyle Script';
            text-shadow:1px 1px 2px;
        }
        .sign {
            background-color:transparent;
            border:solid;
            border-block-color:floralwhite;
            color: floralwhite;
            font-size: 16px;
            padding:15px;
            margin-top:5px;
            margin-left:200px;
            margin-right:200px;
        }
        .sign a{
            color:floralwhite;
        }
        .sign:hover {
                
                border: inherit;
                box-shadow: 0px 0px 0px 2px;
         }
                        
        
  
        
        

        
    </style>
</head>

